<!doctype html>
<html>
<head>
  <title>{{title}}</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://fonts.googleapis.com/css?family=Roboto+Mono" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet">
  {{#each metatags.og}}
    <meta property="{{this.property}}" content="{{this.content}}">
  {{/each}}

  {{#each metatags.standard}}
      <meta name="{{this.name}}" content="{{this.content}}">
  {{/each}}
  <link rel="alternate" type="application/rss+xml" href="/feed/rss.xml">
</head>
<body class="js-theme theme theme-1">
  <div id="body">
    <header class="header" id="header">
        <div class="l-site_width">
          <h1 class="visuallyhidden">Header</h1>
        </div>
    </header>
    {{> "global/navbar/navbar"}}
    <main id="main-content" class="site-content">
      <div class="l-site_width">
        <!-- Breadcrumbs feel "out of place" here -->
        <!-- {{> "global/breadcrumbs/breadcrumbs"}} -->
        {{> "content/main_title/main_title" title=title}}
        {{> "content/text_container/text_container" content=contents}}

        <!-- The previous/next links aren't fully functional yet, see https://github.com/Access4all/adg/issues/30#issuecomment-379798282 -->
        <!-- {{#if previousPage}}<br><a href="/{{previousPage.url}}">ğŸ‘ˆ {{previousPage.title}}</a>{{/if}} -->
        <!-- {{#if nextPage}}<br><a href="/{{nextPage.url}}">{{nextPage.title}} ğŸ‘‰</a>{{/if}} -->
      </div>
    </main>
  </div>

  <script src="/js/scripts.js"></script>
</body>
</html>
